<UserControl x:Class="PointOfSale.Combos.SideCombo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.Combos"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Background="Black">
            <Button Background="Red" Foreground="White" FontFamily="Arial" FontSize="25" Margin="2,6,10,6" Grid.Row="1" Grid.Column="2" Content="Vokun Salad" Click="VokunSalad_Click"/>
            <Button Background="Red" Foreground="White" FontFamily="Arial" FontSize="25" Margin="2,6,10,6" Grid.Row="2" Grid.Column="2" Content="Fried Miraak" Click="FriedMiraak_Click"/>
            <Button Background="Red" Foreground="White" FontFamily="Arial" FontSize="25" Margin="2,6,10,6" Grid.Row="3" Grid.Column="2" Content="Mad Otar Grits" Click="MadOtarGrits_Click"/>
            <Button Background="Red" Foreground="White" FontFamily="Arial" FontSize="25" Margin="2,6,10,6" Grid.Row="4" Grid.Column="2" Content="Dragonborn Waffle Fries " Click="DragonbornWaffleFries_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
