<UserControl x:Class="PointOfSale.AretinoAppleJuicePOS"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListBox Background="Red">
            <TextBlock FontWeight="ExtraBold" FontSize="23">Size</TextBlock>
            <RadioButton GroupName="Size" IsChecked="True" Foreground="White" FontWeight="ExtraBold">Small</RadioButton>
            <RadioButton GroupName="Size" Foreground="White" FontWeight="ExtraBold">Medium</RadioButton>
            <RadioButton GroupName="Size" Foreground="White" FontWeight="ExtraBold">Large</RadioButton>
            <TextBlock FontWeight="ExtraBold" FontSize="23">Special Instructions</TextBlock>
            <CheckBox IsChecked="False" Foreground="White" FontWeight="ExtraBold">Ice</CheckBox>
            <Button FontSize="24" Background="Black" Foreground="rED" FontWeight="ExtraBold" Name="doneButton"  Click="doneButton_Click">
                Done
            </Button>
        </ListBox>
    </Grid>
</UserControl>
