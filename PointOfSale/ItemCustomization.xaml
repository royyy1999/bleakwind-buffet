        <RadioButton FontSize="15" Foreground="White" FontWeight="ExtraBold" Visibility="Visible" GroupName="Size" Content="Medium" Margin="367,101,-366,-101" Grid.ColumnSpan="2"></RadioButton>
        <RadioButton FontSize="15" Foreground="White" FontWeight="ExtraBold" Visibility="Visible" GroupName="Size" Content="Large" Margin="367,129,-368,-126" Grid.ColumnSpan="2"></RadioButton>
        <RadioButton FontSize="15" Foreground="White" FontWeight="ExtraBold" Visibility="Visible" GroupName="Size" Content="Blackberry" Margin="367,190,-369,-190" Grid.ColumnSpan="2"></RadioButton>
        <RadioButton FontSize="15" Foreground="White" FontWeight="ExtraBold" Visibility="Visible" GroupName="Size" Content="Cherry" Margin="367,218,-366,-101" Grid.ColumnSpan="2"></RadioButton>
        <RadioButton FontSize="15" Foreground="White" FontWeight="ExtraBold" Visibility="Visible" GroupName="Size" Content="Grapefruit" Margin="367,246,-368,-126" Grid.ColumnSpan="2"></RadioButton>
        <RadioButton FontSize="15" Foreground="White" FontWeight="ExtraBold" Visibility="Visible" GroupName="Size" Content="Lemon" Margin="367,274,-368,-126" Grid.ColumnSpan="2"></RadioButton>
        <RadioButton FontSize="15" Foreground="White" FontWeight="ExtraBold" Visibility="Visible" GroupName="Size" Content="Peach" Margin="367,302,-368,-126" Grid.ColumnSpan="2"></RadioButton>
        <RadioButton FontSize="15" Foreground="White" FontWeight="ExtraBold" Visibility="Visible" GroupName="Size" Content="Watermelon" Margin="367,330,-363,-259" Grid.ColumnSpan="2"></RadioButton>
        <TextBlock Visibility="Visible" FontSize="33" FontWeight="Heavy" Foreground="Black" Margin="367,146,-369,-146" Grid.ColumnSpan="2">
            Flavor
        </TextBlock>
        <TextBlock Visibility="Visible" FontSize="33" FontWeight="Heavy" Foreground="Black" Margin="367,29,-367,-29" Grid.ColumnSpan="2">
            Size
        </TextBlock>
        <TextBlock Visibility="Visible" FontSize="25" FontWeight="Heavy" Foreground="Black" Margin="20,16,-21,-16" Grid.ColumnSpan="2">
            Special Instructions
        </TextBlock>
        <Button Style="{DynamicResource ButtonStyle1}" FontSize="18" FontWeight="Black" Foreground="Red" Background="Black" Margin="266,315,38,1">Done</Button>
    </Grid>
</UserControl>
